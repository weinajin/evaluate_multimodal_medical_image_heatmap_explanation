{
    "name": "BRATS_IDH",
    "image_key": "image",
    "n_gpu": 4,

    "arch": {
        "type": "GeneNet",
        "args": {
            "in_features": 4,
            "num_class": 2,
            "depth": 2
        }
    },
    "data_loader": {
        "type": "BRATSDataLoader",
        "args":{
            "task_name": "BRATS_IDH",
            "input_size": 128,
            "data_dir": "/scratch/authorid/dld_data/brats2019/MICCAI_BraTS_2019_Data_Training/",
            "fold": 1,
            "over_sample": true,
            "roi": false,
            "batch_size": 4,
            "shuffle": true,
            "weighted_sampler": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 5e-4,
            "amsgrad": true
        }
    },
    "loss": "ce_loss",
    "metrics": [
        "accuracy", "f1"
    ],
    "non_scalar_metrics": ["cm", "auroc", "precision", "recall"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "../log",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": true
    },

    "bias": {
        "gt_align": "None",
        "pat0": "shape",
        "pat1": "text",
        "slice_wise": false,
        "combine_with_input": true,
        "bgmask_path": "/local-scratch/authorid/dld_data/brainmaskBRATS19"
    }
}
