{
    "name": "BRATS_HGG",
    "image_key": "image",
    "n_gpu": 4,

    "arch": {
        "type": "GeneNet",
        "args": {
            "in_features": 4,
            "num_class": 2,
            "depth": 2
        }
    },
    "best_model": "place_holder",
    "data_loader": {
        "type": "BRATSDataLoader",
        "args":{
            "task_name": "BRATS_HGG",
            "input_size": 128,
            "data_dir": "/scratch/authorid/dld_data/brats2020/MICCAI_BraTS2020_TrainingData/",
            "fold": 1,
            "over_sample": false,
            "roi": false,
            "batch_size": 4,
            "shuffle": false,
            "weighted_sampler": true,
            "val_dataset": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 5e-4,
            "amsgrad": true
        }
    },
    "loss": "ce_loss",
    "metrics": [
        "accuracy", "f1", "prauc"
    ],
    "non_scalar_metrics": ["cm", "auroc", "precision", "recall"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "/scratch/authorid/brats_rerun",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 50,

        "tensorboard": true
    },
    "xai": {
        "modality": ["t1", "t1ce", "t2", "flair"],
        "method_list": ["Occlusion", "FeatureAblation", "KernelShap", "ShapleyValueSampling",
            "Gradient", "GuidedBackProp", "GuidedGradCAM",
                   "DeepLift", "InputXGradient", "Deconvolution",
                   "SmoothGrad", "IntegratedGradients","GradientShap", "FeaturePermutation", "Lime", "GradCAM"
        ],
        "last_layer": "conv6"
    }
}
